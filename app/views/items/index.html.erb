<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <% if item.user == nil %>
          <td><%= link_to 'Borrow', borrow_path(item), method: :post %></td>
        <% elsif item.user == current_user %>
          <td><%= link_to 'Give back', give_back_path(item), method: :post %></td>
        <% else %>
          <td><%= "#{item.user.name}に貸出中" %></td>
        <% end %>
        
        <td><%= item.name %></td>
          
        <% if current_user %>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <!-- <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        <% end %>
        </tr>
          
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'ADD New Item', new_item_path %><br>
<% end %>

